<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageButton
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btBack"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="41dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogin"
        android:layout_alignStart="@+id/tvLogin"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="32dp"
        android:text="HasÅ‚o"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="45dp"
        android:layout_toEndOf="@+id/tvLogin"
        android:background="#FFFBFB"
        android:ems="10"
        android:inputType="textPersonName|textEmailAddress"
        android:padding="6dp"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etLogin"
        android:layout_alignTop="@+id/tvPassword"
        android:layout_alignEnd="@+id/etLogin"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFBFB"
        android:ems="10"
        android:inputType="textPersonName|textPassword"
        android:padding="6dp"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="41dp"
        android:text="Logownie" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_marginStart="32dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/btSignIn"
        android:text="Rejestracja" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="84dp"
        android:layout_height="79dp"
        android:layout_below="@+id/btSignIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="270dp"
        android:visibility="invisible" />
</RelativeLayout>